{
    "manifest_version": 3,
    "name": "Utility Hub",
    "version": "1.1",
    "description": "The ultimate productivity hub for Chrome. Auto refresh, keep alive, and more.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "modules/whatsapp-signature/content.js"
            ],
            "css": [
                "modules/whatsapp-signature/content.css"
            ]
        }
    ]
}